@page
@model RegisterModel
@using Pastures2019.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Register"];
}

<div class="container">
    <form class="form-signin mt-5" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="text-center mb-4">
            <img class="mb-4" src="~/images/logoKazniijik.svg" alt="" width="100" height="100">
            <h1 class="h3 mb-3 font-weight-normal">@ViewData["Title"]</h1>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-label-group">
            <input asp-for="Input.Email" type="email" id="inputEmail" class="form-control" placeholder="@SharedLocalizer["Email"]" required autofocus>
            <label for="inputEmail" asp-for="Input.Email"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-label-group">
            <input asp-for="Input.Password" type="password" id="inputPassword" class="form-control" placeholder="@SharedLocalizer["Password"]" required>
            <label asp-for="Input.Password" for="inputPassword"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-label-group">
            <input asp-for="Input.ConfirmPassword" type="password" id="inputPassword" class="form-control" placeholder="@SharedLocalizer["ConfirmPassword"]" required>
            <label asp-for="Input.ConfirmPassword" for="inputPassword"></label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">@SharedLocalizer["Register"]</button>
        <div class="form-group">
            <p>
                <a id="Register" asp-page="./Login">@SharedLocalizer["Login"]</a>
            </p>
        </div>
        <p class="mt-5 mb-3 text-muted text-center">&copy; @DateTime.Now.Year.ToString() - Pastures</p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
