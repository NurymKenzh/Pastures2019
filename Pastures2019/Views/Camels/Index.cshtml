@model Pastures2019.Models.CamelIndexPageViewModel
@using System.Net
@using Pastures2019.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Camels"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@SharedLocalizer["Camels"]</h1>

<p>
    <a asp-action="Create">@SharedLocalizer["Create"]</a>
</p>

@using (Html.BeginForm("Index", "Camels", new { SortOrder = ViewBag.SortOrdert, CodeFilter = ViewBag.CodeFilter, RangeFilter = ViewBag.RangeFilter }, FormMethod.Get))
{
    @Html.Editor("SortOrder", null, new { htmlAttributes = new { @hidden = "hidden" }, value = ViewBag.SortOrder })
    @if (Model.Pager.EndPage > 1)
    {
        <ul class="pagination">
            @if (Model.Pager.CurrentPage > 1)
            {
                <li>
                    @Html.ActionLink(WebUtility.HtmlDecode("&laquo;&laquo;"), "Index",
                        new { SortOrder = ViewBag.SortOrdert, CodeFilter = ViewBag.CodeFilter, RangeFilter = ViewBag.RangeFilter })
                </li>
                <li>
                    @Html.ActionLink(WebUtility.HtmlDecode("&laquo;"), "Index",
                        new { PageNumber = Model.Pager.CurrentPage - 1, SortOrder = ViewBag.SortOrdert, CodeFilter = ViewBag.CodeFilter, RangeFilter = ViewBag.RangeFilter })
                </li>
            }

            @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
            {
                <li class="@(page == Model.Pager.CurrentPage ? "active" : "")">
                    @Html.ActionLink(page.ToString(), "Index",
                        new { PageNumber = page, SortOrder = ViewBag.SortOrdert, CodeFilter = ViewBag.CodeFilter, RangeFilter = ViewBag.RangeFilter })
                </li>
            }

            @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
            {
                <li>
                    @Html.ActionLink(WebUtility.HtmlDecode("&raquo;"), "Index",
                        new { PageNumber = Model.Pager.CurrentPage + 1, SortOrder = ViewBag.SortOrdert, CodeFilter = ViewBag.CodeFilter, RangeFilter = ViewBag.RangeFilter })
                </li>
                <li>
                    @Html.ActionLink(WebUtility.HtmlDecode("&raquo;&raquo;"), "Index",
                        new { PageNumber = Model.Pager.TotalPages, SortOrder = ViewBag.SortOrdert, CodeFilter = ViewBag.CodeFilter, RangeFilter = ViewBag.RangeFilter })
                </li>
            }
        </ul>
    }
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(t => t.Items.FirstOrDefault().Code).ToString(), "Index",
                        new { SortOrder = ViewBag.CodeSort, CodeFilter = ViewBag.CodeFilter, RangeFilter = ViewBag.RangeFilter })
                    <br />
                    @Html.Editor("CodeFilter", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
                </th>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(t => t.Items.FirstOrDefault().Range).ToString(), "Index",
                        new { SortOrder = ViewBag.RangeSort, CodeFilter = ViewBag.CodeFilter, RangeFilter = ViewBag.RangeFilter })
                    <br />
                    @Html.Editor("RangeFilter", null, new { htmlAttributes = new { @class = "form-control" }, value = "" })
                </th>
                <th>
                    <br />
                    <input type="submit" value="@SharedLocalizer["Find"]" class="btn btn-primary">
                </th>
            </tr>
        </thead>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Range)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" asp->@SharedLocalizer["Edit"]</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">@SharedLocalizer["Details"]</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">@SharedLocalizer["Delete"]</a>
                </td>
            </tr>
        }
    </table>
    @if (Model.Pager.EndPage > 1)
    {
        <ul class="pagination">
            @if (Model.Pager.CurrentPage > 1)
            {
                <li>
                    @Html.ActionLink(WebUtility.HtmlDecode("&laquo;&laquo;"), "Index",
                        new { SortOrder = ViewBag.SortOrdert, CodeFilter = ViewBag.CodeFilter, RangeFilter = ViewBag.RangeFilter })
                </li>
                <li>
                    @Html.ActionLink(WebUtility.HtmlDecode("&laquo;"), "Index",
                        new { PageNumber = Model.Pager.CurrentPage - 1, SortOrder = ViewBag.SortOrdert, CodeFilter = ViewBag.CodeFilter, RangeFilter = ViewBag.RangeFilter })
                </li>
            }

            @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
            {
                <li class="@(page == Model.Pager.CurrentPage ? "active" : "")">
                    @Html.ActionLink(page.ToString(), "Index",
                        new { PageNumber = page, SortOrder = ViewBag.SortOrdert, CodeFilter = ViewBag.CodeFilter, RangeFilter = ViewBag.RangeFilter })
                </li>
            }

            @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
            {
                <li>
                    @Html.ActionLink(WebUtility.HtmlDecode("&raquo;"), "Index",
                        new { PageNumber = Model.Pager.CurrentPage + 1, SortOrder = ViewBag.SortOrdert, CodeFilter = ViewBag.CodeFilter, RangeFilter = ViewBag.RangeFilter })
                </li>
                <li>
                    @Html.ActionLink(WebUtility.HtmlDecode("&raquo;&raquo;"), "Index",
                        new { PageNumber = Model.Pager.TotalPages, SortOrder = ViewBag.SortOrdert, CodeFilter = ViewBag.CodeFilter, RangeFilter = ViewBag.RangeFilter })
                </li>
            }
        </ul>
    }
}
