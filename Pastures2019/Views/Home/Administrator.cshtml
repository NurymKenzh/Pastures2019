@using Pastures2019.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Administrator"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@SharedLocalizer["Administrator"]</h1>

<a asp-area="" asp-controller="Users" asp-action="Index">@SharedLocalizer["Users"]</a>
<br />
<h>
    <a asp-area="" asp-controller="MODIS" asp-action="Index">MODIS</a>
</h>
<br />
<a asp-area="" asp-controller="MODISSources" asp-action="Index">@SharedLocalizer["MODISSources"]</a>
<a asp-area="" asp-controller="MODISProducts" asp-action="Index">@SharedLocalizer["MODISProducts"]</a>
<a asp-area="" asp-controller="MODISDataSets" asp-action="Index">@SharedLocalizer["MODISDataSets"]</a>
<br />
@if (System.Threading.Thread.CurrentThread.CurrentCulture != null)
{
    if (System.Threading.Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName == "ru")
    {
        <h>
            Породное районирование сельскохозяйственных животных Республики Казахстан
        </h>
    }
    else if (System.Threading.Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName == "kk")
    {
        <h>
            Қазақстан Республикасының ауыл шаруашылығы жануарларын асылдандыру
        </h>
    }
    else if (System.Threading.Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName == "en")
    {
        <h>
            Breeding zoning of farm animals of the Republic of Kazakhstan
        </h>
    }
}
<br />
<a asp-area="" asp-controller="Camels" asp-action="Index">@SharedLocalizer["Camels"]</a>
<a asp-area="" asp-controller="Cattle" asp-action="Index">@SharedLocalizer["Cattles"]</a>
<a asp-area="" asp-controller="Horses" asp-action="Index">@SharedLocalizer["Horses"]</a>
<a asp-area="" asp-controller="SmallCattles" asp-action="Index">@SharedLocalizer["SmallCattles"]</a>
<br />
@if (System.Threading.Thread.CurrentThread.CurrentCulture != null)
{
    if (System.Threading.Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName == "ru")
    {
        <h>
            Нагрузка сельскохозяйственных животных на пастбища Республики Казахстан
        </h>
    }
    else if (System.Threading.Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName == "kk")
    {
        <h>
            Қазақстан Республикасының жайылымдарына ауылшаруашылық жануарларының жүктемесі
        </h>
    }
    else if (System.Threading.Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName == "en")
    {
        <h>
            The load of farm animals on the pastures of the Republic of Kazakhstan
        </h>
    }
}
<br />
<a asp-area="" asp-controller="BurOtdels" asp-action="Index">@SharedLocalizer["BurOtdels"]</a>
