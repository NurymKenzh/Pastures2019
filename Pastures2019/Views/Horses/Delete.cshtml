@model Pastures2019.Models.Horse
@using Pastures2019.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Delete"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@SharedLocalizer["Delete"]</h1>

<h3>@SharedLocalizer["Delete"]?</h3>
<div>
    <h4>@SharedLocalizer["Horse"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Breed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Breed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Direction)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Direction)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Height)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Height)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MilkYield)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MilkYield)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BodyLength)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BodyLength)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bust)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bust)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Metacarpus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Metacarpus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalGoals)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalGoals)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bred)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bred)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Range)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Range)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            @{
                var base64 = "";
                var imgSrc = "";
                if (Model.Photo != null)
                {
                    base64 = Convert.ToBase64String(Model.Photo);
                    imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                }
            }
            <img src="@imgSrc" style="max-width: 500px;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-danger" /> |
        <a asp-action="Index">@SharedLocalizer["BackToList"]</a>
    </form>
</div>
