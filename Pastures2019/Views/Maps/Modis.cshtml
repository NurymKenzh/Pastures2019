@using Pastures2019.Controllers
@{
    ViewData["Title"] = "Modis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/lib/ol/ol.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/vendor/font-awesome/css/font-awesome.min.css" />
<script src="~/lib/ol/ol.js"></script>
<link href="~/lib/vendor/jBox/dist/jBox.all.css" rel="stylesheet" />
<script src="~/lib/vendor/jBox/dist/jBox.all.js"></script>
@{
    YearDay[] yearDays_MOLT_MOD13Q1006_B01_NDVI = ViewBag.YearDays_MOLT_MOD13Q1006_B01_NDVI;
    string maxYear_MOLT_MOD13Q1006_B01_NDVI = yearDays_MOLT_MOD13Q1006_B01_NDVI.Max(y => y.year),
        maxDay_MOLT_MOD13Q1006_B01_NDVI = yearDays_MOLT_MOD13Q1006_B01_NDVI.Where(y => y.year == maxYear_MOLT_MOD13Q1006_B01_NDVI).Max(y => y.day);
    YearDay[] yearDays_MOLT_MOD13Q1006_B01_NDVI_Anomaly = ViewBag.YearDays_MOLT_MOD13Q1006_B01_NDVI_Anomaly;
    string maxYear_MOLT_MOD13Q1006_B01_NDVI_Anomaly = yearDays_MOLT_MOD13Q1006_B01_NDVI_Anomaly.Max(y => y.year),
        maxDay_MOLT_MOD13Q1006_B01_NDVI_Anomaly = yearDays_MOLT_MOD13Q1006_B01_NDVI_Anomaly.Where(y => y.year == maxYear_MOLT_MOD13Q1006_B01_NDVI_Anomaly).Max(y => y.day);
}
<div class="container-fluid sticky-top p-0">
    <!-- Sidebar -->
    <nav class="sidebar">
        <div class="page-wrapper chiller-theme">
            <!-- close sidebar menu -->
            <div class="dismiss">
                <i class="fa fa-arrow-left"></i>
            </div>
            <div class="logo">
                <h3>Pasture</h3>
            </div>
            <ul class="list-unstyled menu-elements m-3">
                <li class="active">
                    <form>
                        <div class="form-group">
                            <label for="ModDataset">Satellite</label>
                            <select class="form-control form-control-sm" id="ModDataset">
                                <option>Terra MODIS 16-day</option>
                                <option>Aqua MODIS 16-day</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="DataSet">DataSet</label>
                            <select class="form-control form-control-sm" id="DataSet" onchange="ChangeDataSet()">
                                <option value="NDVI">NDVI</option>
                                <option value="Anomaly">NDVI Anomaly %</option>
                            </select>
                        </div>
                        <div class="form-group NDVI">
                            <label for="Year_MOLT_MOD13Q1006_B01_NDVI">Year</label>
                            <select class="form-control form-control-sm" id="Year_MOLT_MOD13Q1006_B01_NDVI" onchange="ChangeYear()">
                                @foreach (string year in yearDays_MOLT_MOD13Q1006_B01_NDVI.Select(y => y.year).Distinct().OrderBy(y => y))
                                {
                                    if (year == maxYear_MOLT_MOD13Q1006_B01_NDVI)
                                    {
                                        <option value="@year" selected>@year</option>
                                    }
                                    else
                                    {
                                        <option value="@year">@year</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group NDVI">
                            <label for="DayOfYear_MOLT_MOD13Q1006_B01_NDVI">Start DOY : MM/DD Range</label>
                            <select class="form-control form-control-sm" id="DayOfYear_MOLT_MOD13Q1006_B01_NDVI" onchange="ChangeModis()">
                                @foreach (string day in yearDays_MOLT_MOD13Q1006_B01_NDVI.Where(y => y.year == maxYear_MOLT_MOD13Q1006_B01_NDVI).Select(y => y.day).Distinct().OrderBy(y => y))
                                {
                                    if (day == maxDay_MOLT_MOD13Q1006_B01_NDVI)
                                    {
                                        <option value="@day" selected>@day</option>
                                    }
                                    else
                                    {
                                        <option value="@day">@day</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group Anomaly" style="display: none;">
                            <label for="Year_MOLT_MOD13Q1006_B01_NDVI_Anomaly">Year</label>
                            <select class="form-control form-control-sm" id="Year_MOLT_MOD13Q1006_B01_NDVI_Anomaly" onchange="ChangeYear()">
                                @foreach (string year in yearDays_MOLT_MOD13Q1006_B01_NDVI_Anomaly.Select(y => y.year).Distinct().OrderBy(y => y))
                                {
                                    if (year == maxYear_MOLT_MOD13Q1006_B01_NDVI_Anomaly)
                                    {
                                        <option value="@year" selected>@year</option>
                                    }
                                    else
                                    {
                                        <option value="@year">@year</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group Anomaly" style="display: none;">
                            <label for="DayOfYear_MOLT_MOD13Q1006_B01_NDVI_Anomaly">Start DOY : MM/DD Range</label>
                            <select class="form-control form-control-sm" id="DayOfYear_MOLT_MOD13Q1006_B01_NDVI_Anomaly" onchange="ChangeModis()">
                                @foreach (string day in yearDays_MOLT_MOD13Q1006_B01_NDVI_Anomaly.Where(y => y.year == maxYear_MOLT_MOD13Q1006_B01_NDVI_Anomaly).Select(y => y.day).Distinct().OrderBy(y => y))
                                {
                                    if (day == maxDay_MOLT_MOD13Q1006_B01_NDVI_Anomaly)
                                    {
                                        <option value="@day" selected>@day</option>
                                    }
                                    else
                                    {
                                        <option value="@day">@day</option>
                                    }
                                }
                            </select>
                        </div>
                    </form>
                </li>
                <li>
                    <a href="#otherSections" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle" role="button" aria-controls="otherSections">
                        <i class="fas fa-sync"></i>Layers:
                    </a>
