    </div>
    <!-- End content -->
</div>

@* layers *@
<script>
    var geoserver_url = '@ViewBag.GeoServerUrl', //'http://89.250.84.186:8080/geoserver/',
        geoserver_workspace_name = '@ViewBag.ModisWorkspace', //'MODIS',
        layerModisTemplate1 = '@ViewBag.ModisLayerTemplate1', //'A',
        layerModisTemplate_MOLT_MOD13Q1006_B01_NDVI = '@ViewBag.ModisLayerTemplate_MOLT_MOD13Q1006_B01_NDVI',
        layerModisTemplate_MOLT_MOD13Q1006_B01_NDVI_Anomaly = '@ViewBag.ModisLayerTemplate_MOLT_MOD13Q1006_B01_NDVI_Anomaly';
    var layerNDVI = layerModisTemplate1 + $('#Year_MOLT_MOD13Q1006_B01_NDVI').val() + $('#DayOfYear_MOLT_MOD13Q1006_B01_NDVI').val() + layerModisTemplate_MOLT_MOD13Q1006_B01_NDVI,
        layerAnomaly = layerModisTemplate1 + $('#Year_MOLT_MOD13Q1006_B01_NDVI_Anomaly').val() + $('#DayOfYear_MOLT_MOD13Q1006_B01_NDVI_Anomaly').val() + layerModisTemplate_MOLT_MOD13Q1006_B01_NDVI_Anomaly;

    var Source_OSM = new ol.source.OSM();
    var Layer_Base = new ol.layer.Tile({
        source: Source_OSM
    });
    Layer_Base.set('name', 'Base');
    Layer_Base.setOpacity(0.80);

    var url_NDVI = geoserver_url + geoserver_workspace_name + '/wms';
    var Source_NDVI = new ol.source.TileWMS({
        url: url_NDVI,
        params: {
            'FORMAT': 'image/png',
            'VERSION': '1.1.1',
            tiled: true,
            'LAYERS': geoserver_workspace_name + ':' + layerNDVI
        },
        serverType: 'geoserver'
    });
    var Layer_NDVI = new ol.layer.Tile({
        source: Source_NDVI
    });
    Layer_NDVI.set('name', 'NDVI');
    Layer_NDVI.setOpacity(0.80);

    var url_Anomaly = geoserver_url + geoserver_workspace_name + '/wms';
    var Source_Anomaly = new ol.source.TileWMS({
        url: url_Anomaly,
        params: {
            'FORMAT': 'image/png',
            'VERSION': '1.1.1',
            tiled: true,
            'LAYERS': geoserver_workspace_name + ':' + layerAnomaly
        },
        serverType: 'geoserver'
    });
    var Layer_Anomaly = new ol.layer.Tile({
        source: Source_Anomaly
    });
    Layer_Anomaly.set('name', 'Anomaly');
    Layer_Anomaly.setVisible(false);
    Layer_Anomaly.setOpacity(0.80);
</script>

@* map *@
<script>
    var map = new ol.Map({
        target: 'map',
        controls: new ol.control.defaults({ attributionOptions: { collapsible: true } }).extend([
            new ol.control.ScaleLine()
        ]),
        layers: [
            Layer_Base,
            Layer_NDVI,
            Layer_Anomaly
        ],
        view: new ol.View({
            center: ol.proj.fromLonLat([66.902, 48.714]),
            zoom: 5,
            minZoom: 5,
            extent: [5028944.964937042,4754994.655562972,10214432.963802021,7494497.74930296]
        })
    });
</script>

<script>
    function ChangeDataSet() {
        if ($('#DataSet').val() == 'NDVI') {
            Layer_NDVI.setVisible(true);
            Layer_Anomaly.setVisible(false);
            $('.NDVI').show();
            $('.Anomaly').hide();
        }
        else if ($('#DataSet').val() == 'Anomaly') {
            Layer_NDVI.setVisible(false);
            Layer_Anomaly.setVisible(true);
            $('.Anomaly').show();
            $('.NDVI').hide();
        }
    }

    function ChangeYear() {
        // NDVI
        $('#DayOfYear_MOLT_MOD13Q1006_B01_NDVI').html('');
        var maxday_MOLT_MOD13Q1006_B01_NDVI = '001';
        for (i = 0; i < yeardays_MOLT_MOD13Q1006_B01_NDVI.length; i++) {
            if (yeardays_MOLT_MOD13Q1006_B01_NDVI[i].year == $('#Year_MOLT_MOD13Q1006_B01_NDVI').val().toString()) {
                if (parseInt(yeardays_MOLT_MOD13Q1006_B01_NDVI[i].day) > parseInt(maxday_MOLT_MOD13Q1006_B01_NDVI)) {
                    maxday_MOLT_MOD13Q1006_B01_NDVI = yeardays_MOLT_MOD13Q1006_B01_NDVI[i].day;
                }
            }
        }
        for (i = 0; i < yeardays_MOLT_MOD13Q1006_B01_NDVI.length; i++) {
            if (yeardays_MOLT_MOD13Q1006_B01_NDVI[i].year == $('#Year_MOLT_MOD13Q1006_B01_NDVI').val().toString()) {
                if (yeardays_MOLT_MOD13Q1006_B01_NDVI[i].day == maxday_MOLT_MOD13Q1006_B01_NDVI) {
                    $('#DayOfYear_MOLT_MOD13Q1006_B01_NDVI').append($('<option selected />').val(yeardays_MOLT_MOD13Q1006_B01_NDVI[i].day).text(yeardays_MOLT_MOD13Q1006_B01_NDVI[i].day));
                }
                else {
                    $('#DayOfYear_MOLT_MOD13Q1006_B01_NDVI').append($('<option />').val(yeardays_MOLT_MOD13Q1006_B01_NDVI[i].day).text(yeardays_MOLT_MOD13Q1006_B01_NDVI[i].day));
                }
            }
        }
        // Anomaly
        $('#DayOfYear_MOLT_MOD13Q1006_B01_NDVI_Anomaly').html('');
        var maxday_MOLT_MOD13Q1006_B01_NDVI_Anomaly = '001';
        for (i = 0; i < yeardays_MOLT_MOD13Q1006_B01_NDVI_Anomaly.length; i++) {
            if (yeardays_MOLT_MOD13Q1006_B01_NDVI_Anomaly[i].year == $('#Year_MOLT_MOD13Q1006_B01_NDVI_Anomaly').val().toString()) {
                if (parseInt(yeardays_MOLT_MOD13Q1006_B01_NDVI_Anomaly[i].day) > parseInt(maxday_MOLT_MOD13Q1006_B01_NDVI_Anomaly)) {
                    maxday_MOLT_MOD13Q1006_B01_NDVI_Anomaly = yeardays_MOLT_MOD13Q1006_B01_NDVI_Anomaly[i].day;
                }
            }
        }
        for (i = 0; i < yeardays_MOLT_MOD13Q1006_B01_NDVI_Anomaly.length; i++) {
            if (yeardays_MOLT_MOD13Q1006_B01_NDVI_Anomaly[i].year == $('#Year_MOLT_MOD13Q1006_B01_NDVI_Anomaly').val().toString()) {
                if (yeardays_MOLT_MOD13Q1006_B01_NDVI_Anomaly[i].day == maxday_MOLT_MOD13Q1006_B01_NDVI_Anomaly) {
                    $('#DayOfYear_MOLT_MOD13Q1006_B01_NDVI_Anomaly').append($('<option selected />').val(yeardays_MOLT_MOD13Q1006_B01_NDVI_Anomaly[i].day).text(yeardays_MOLT_MOD13Q1006_B01_NDVI_Anomaly[i].day));
                }
                else {
                    $('#DayOfYear_MOLT_MOD13Q1006_B01_NDVI_Anomaly').append($('<option />').val(yeardays_MOLT_MOD13Q1006_B01_NDVI_Anomaly[i].day).text(yeardays_MOLT_MOD13Q1006_B01_NDVI_Anomaly[i].day));
                }
            }
        }
        ChangeModis();
    }

    function ChangeModis() {
        layerNDVI = layerModisTemplate1 + $('#Year_MOLT_MOD13Q1006_B01_NDVI').val() + $('#DayOfYear_MOLT_MOD13Q1006_B01_NDVI').val() + layerModisTemplate_MOLT_MOD13Q1006_B01_NDVI;
        Source_NDVI = new ol.source.TileWMS({
            url: geoserver_url + geoserver_workspace_name + '/wms',
            params: {
                'FORMAT': 'image/png',
                'VERSION': '1.1.1',
                tiled: true,
                'LAYERS': geoserver_workspace_name + ':' + layerNDVI
            },
            serverType: 'geoserver'
        });
        Layer_NDVI.setSource(Source_NDVI);

        layerAnomaly = layerModisTemplate1 + $('#Year_MOLT_MOD13Q1006_B01_NDVI_Anomaly').val() + $('#DayOfYear_MOLT_MOD13Q1006_B01_NDVI_Anomaly').val() + layerModisTemplate_MOLT_MOD13Q1006_B01_NDVI_Anomaly;
        Source_Anomaly = new ol.source.TileWMS({
            url: geoserver_url + geoserver_workspace_name + '/wms',
            params: {
                'FORMAT': 'image/png',
                'VERSION': '1.1.1',
                tiled: true,
                'LAYERS': geoserver_workspace_name + ':' + layerAnomaly
            },
            serverType: 'geoserver'
        });
        Layer_Anomaly.setSource(Source_Anomaly);
    }
</script>

